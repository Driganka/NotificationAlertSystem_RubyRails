<p style="color: green"><%= notice %></p>

<h1>Messages</h1>


<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Department to Send</th>
        <th>Message ID</th>
      </tr>
    </thead>

    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td>
            <%= link_to message.title , message %>
          </td>
          <td><%= message.content %></td>
          <td>
            <%= link_to message.dptidtosend , departments_url %>
          </td>
          <td>
            <%= link_to message.msgid , message %>
          </td>
          </tr>
      <% end %>
    </tbody>
</table>

<%= link_to "New Message", new_message_path, class:'btn btn-primary' %>
